<mvc:View
    controllerName="com.crescent.app.creditnoteformsd.controller.creditnoteform"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <f:DynamicPage id="pageId">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <!-- ⚠️ Use SmartVariantManagementUi2 if you really need showExecuteOnSelection -->
                    <svm:SmartVariantManagement id="svm" />
                </f:heading>
                <f:expandedContent>
                    <Text
                        id="expandedLabel"
                        text="No filters active"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Text
                        id="snappedLabel"
                        text="No filters active"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search=".onFetchOData"
                        filterChange=".onFilterChange"
                        afterVariantLoad=".onAfterVariantLoad"
                    >
                        <fb:filterGroupItems>
                            <!-- Document No -->
                            <fb:FilterGroupItem
                                name="documentNo"
                                label="Document No"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <ComboBox
                                        id="idDocumentNoInput"
                                        selectedKey="{globalData>/documentNo}"
                                        placeholder="Select Document No"
                                        required="true"
                                        showClearIcon="true"
                                        items="{parametersData>/value}"
                                    >
                                        <core:Item
                                            key="{parametersData>documentNo}"
                                            text="{parametersData>documentNo}"
                                        />
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Sales Org -->
                            <fb:FilterGroupItem
                                name="salesOrg"
                                label="Sales Org"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <ComboBox
                                        id="idSalesOrgInput"
                                        selectedKey="{globalData>/salesOrg}"
                                        placeholder="Select Sales Org"
                                        showClearIcon="true"
                                        items="{parametersData>/value}"
                                    >
                                        <core:Item
                                            key="{parametersData>salesOrg}"
                                            text="{parametersData>salesOrg}"
                                        />
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Document Date -->
                            <fb:FilterGroupItem
                                name="documentDate"
                                label="Document Date"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <ComboBox
                                        id="idDocumentDateInput"
                                        selectedKey="{globalData>/documentDate}"
                                        placeholder="Select Document Date"
                                        required="true"
                                        showClearIcon="true"
                                        items="{parametersData>/value}"
                                    >
                                        <core:Item
                                            key="{parametersData>documentDate}"
                                            text="{parametersData>documentDate}"
                                        />
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <!-- Payer -->
                            <fb:FilterGroupItem
                                name="payer"
                                label="Payer"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <ComboBox
                                        id="idPayerInput"
                                        selectedKey="{globalData>/payer}"
                                        placeholder="Select Payer"
                                        required="true"
                                        showClearIcon="true"
                                        items="{parametersData>/value}"
                                    >
                                        <core:Item
                                            key="{parametersData>payer}"
                                            text="{parametersData>payer}"
                                        />
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <VBox
                class="sapUiSmallMargin"
                fitContainer="true"
                height="100%"
            >
                <core:HTML
                    id="pdfIframeContainer"
                    content=""
                    class="pdf-container"
                />
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
